<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="sihuo.app.com.kuaiqian.MainActivity">

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:drawableTop="@drawable/wns_home"
                    android:scaleType="center"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="#010101"
                    android:text="主页"
                    android:paddingTop="3dp"
                    android:drawablePadding="-5dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:drawableTop="@drawable/wns_sx"
                    android:gravity="center"
                    android:drawablePadding="-5dp"
                    android:textSize="11sp"
                    android:paddingTop="3dp"
                    android:textColor="#010101"
                    android:text="刷新"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/youhui"
                    android:drawablePadding="-5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:drawableTop="@drawable/wns_yh"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:paddingTop="3dp"
                    android:textColor="#010101"
                    android:text="优惠"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/kefu"
                    android:paddingTop="3dp"
                    android:drawablePadding="-5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:drawableTop="@drawable/wns_kf"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="#010101"
                    android:text="客服"
                    android:visibility="visible" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#222222"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/back"
                android:paddingRight="10dp"
                android:visibility="invisible"
                android:scaleType="center" />


            <TextView
                android:id="@+id/share"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:scaleType="center"
                android:src="@drawable/ic_action_name"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/more"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/more_btn"
                android:scaleType="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/go_forward"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:scaleType="center"
                android:text="前进"
                android:textColor="#555555"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/close_app"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/back_hb"
                android:gravity="center"
                android:scaleType="center"
                android:text=""
                android:textColor="#555555"
                android:textSize="18sp"
                android:visibility="invisible" />
        </RelativeLayout>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refesh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_above="@+id/title_layout">

            <sihuo.app.com.kuaiqian.utils.X5WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</RelativeLayout>
