<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleLayout"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:background="#f8f8f8">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/ty_home"
            android:visibility="visible" />

        <TextView
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="#555555"
            android:drawableTop="@drawable/refresh_gray"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textColor="#555555"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/back_hb"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/go_forward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/forward"
            android:textColor="#555555"
            android:textSize="12sp" />

        <TextView
            android:id="@id/clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textColor="#555555"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/ty_del"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />
</RelativeLayout>