<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/root_view"
    tools:context="sihuo.app.com.kuaiqian.MainActivity">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_height="44dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF"
            android:textColor="#222222"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:scaleType="center"
            android:text="返回"
            android:visibility="invisible"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"
            android:src="@drawable/back_hb"/>

        <TextView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:scaleType="center"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/home_hb"/>
        <TextView
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:scaleType="center"
            android:layout_toLeftOf="@+id/home"
            android:visibility="invisible"
            android:src="@drawable/ic_action_name"/>
        <TextView
            android:id="@+id/refresh"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:scaleType="center"
            android:visibility="visible"
            android:text="刷新"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/more"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@drawable/refresh"/>

        <TextView
            android:id="@+id/kefu"
            android:paddingTop="3dp"
            android:drawablePadding="-5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/wns_kf"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="#010101"
            android:text="客服"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/youhui"
            android:drawablePadding="-5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/wns_yh"
            android:gravity="center"
            android:textSize="11sp"
            android:paddingTop="3dp"
            android:textColor="#010101"
            android:text="优惠"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/loadview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="gone"
            android:text="正在启动"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:background="@drawable/page_loading_bg"/>

        <TextView
            android:id="@+id/close_app"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:text=""
            android:visibility="invisible"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"
            android:background="@drawable/back_hb"/>
        <TextView
            android:id="@+id/go_forward"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:visibility="invisible"
            android:text="前进"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refesh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout">
        <sihuo.app.com.kuaiqian.utils.X5WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
