        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:background="#66a0fa"
        android:textColor="#ffffff"
        android:text="消息"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:background="#66a0fa"
        android:layout_marginTop="2dp"
        android:textColor="#ffffff"
        android:text="清除缓存"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:background="#66a0fa"
        android:layout_marginTop="2dp"
        android:textColor="#ffffff"
        android:text="QQ客服"/>

</LinearLayout>